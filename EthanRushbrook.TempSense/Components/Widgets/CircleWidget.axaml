<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:suki="https://github.com/kikipoulet/SukiUI"
             xmlns:widgets="clr-namespace:EthanRushbrook.TempSense.Components.Widgets"
             x:DataType="widgets:CircleWidget"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="EthanRushbrook.TempSense.Components.Widgets.CircleWidget"
             x:Name="Root">
    <Grid RowDefinitions="*, Auto">
        <Viewbox>
            <suki:CircleProgressBar Name="Progress" Margin="14" StrokeWidth="14" Value="{Binding Value, ElementName=Root}">
                <TextBlock  
                    Margin="0,2,0,0"
                    Classes="h3"
                    Text="{Binding Header, ElementName=Root}"
                />
            </suki:CircleProgressBar>
        </Viewbox>
        <Panel Grid.Row="1" Margin="14 0">
            <Viewbox MaxWidth="200">
                <TextBlock HorizontalAlignment="Center" Text="{Binding Caption, ElementName=Root}" />
            </Viewbox>
        </Panel>
    </Grid>
</UserControl>
