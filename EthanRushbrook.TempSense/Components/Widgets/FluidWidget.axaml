<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:suki="https://github.com/kikipoulet/SukiUI"
             xmlns:widgets="clr-namespace:EthanRushbrook.TempSense.Components.Widgets"
             x:DataType="widgets:FluidWidget"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="EthanRushbrook.TempSense.Components.Widgets.FluidWidget">
    <Grid RowDefinitions="*, Auto">
        <Viewbox MaxWidth="300">
            <suki:WaveProgress Name="Progress" Value="{Binding Value}" />
        </Viewbox>
        <Panel Grid.Row="1" Margin="14 0">
            <Viewbox MaxWidth="200">
                <TextBlock HorizontalAlignment="Center" Text="{Binding Caption}" />
            </Viewbox>
        </Panel>
    </Grid>
</UserControl>
