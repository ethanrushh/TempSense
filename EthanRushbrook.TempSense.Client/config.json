{
  "server_endpoint": "http://localhost:5058/hub",
  "page_id": "Dev PC",
  
  "pages": [
    {
      "page_name": "Homelab",
      
      "cols": "*, *, *",
      "rows": "*, *",
      
      "widget_layout": "Grid",
      
      "widgets": [
        {
          "type": "Sensor",
          "widget_display_type": "Round",

          "device_name": "coretemp-isa-0000",
          "sensor_name": "Core 0",
          "field_name": "temp2_input",

          "display_name": "Page 2 Sensor",
          "unit": "°C"
        },
        {
          "type": "Text",
          "text_value": "Firefox",
          
          "action": "hyprctl",
          "action_args": "dispatch exec firefox"
        },
        {
          "type": "Disk",
          "widget_display_type": "Readout",

          "device_name": "/",

          "display_name": "Free Space (GiB) on /"
        },
        {
          "type": "Memory",
          "widget_display_type": "Fluid",

          "memory_sensor_target": "UsedPercentage",

          "display_name": "Memory Usage"
        },
        {
          "type": "Disk",
          "widget_display_type": "Readout",

          "device_name": "/",

          "display_name": "Free Space (GiB) on /"
        },
        {
          "type": "Memory",
          "widget_display_type": "Fluid",

          "memory_sensor_target": "UsedPercentage",

          "display_name": "Memory Usage"
        }
      ]
    },


    {
      "page_name": "Workstation",

      "cols": "*, *, *",
      "rows": "*, *",

      "widget_layout": "Grid",

      "widgets": [
        {
          "type": "Sensor",
          "widget_display_type": "Round",

          "device_name": "coretemp-isa-0000",
          "sensor_name": "Package id 0",
          "field_name": "temp1_input",

          "display_name": "CPU Package (°C)",
          "unit": "°C"
        },
        {
          "type": "Disk",
          "widget_display_type": "Readout",

          "device_name": "/",

          "display_name": "Free Space On NVMe"
        },
        {
          "type": "Memory",
          "widget_display_type": "Fluid",

          "memory_sensor_target": "UsedPercentage",

          "display_name": "Memory Usage"
        },
        {
          "type": "Network",
          "widget_display_type": "Readout",
          "header": "↑",

          "device_name": "enp4s0",
          "direction": "Up",

          "display_name": "enp4s0 Upload"
        },
        {
          "type": "Network",
          "widget_display_type": "Readout",
          "header": "↓",

          "device_name": "enp4s0",
          "direction": "Down",

          "display_name": "enp4s0 Download"
        },
        {
          "type": "Memory",
          "widget_display_type": "Readout",

          "memory_sensor_target": "Free",

          "display_name": "Available RAM"
        }
      ]
    }
  ]
}
